<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="console" type="Console" layout="${date:format=yyyy-MM-dd HH\:mm\:ss} ${message} ${exception:format=message}"/>
      <target name="file" xsi:type="File" layout="${date:format=yyyy-MM-dd HH\:mm\:ss} ${message} ${exception:format=message}" fileName="${basedir}/ScannerService.txt" concurrentWrites="true" keepFileOpen="false"/>
    </targets>
    <rules>
      <logger name="*" minlevel="Trace" writeTo="console,file"/>
    </rules>
  </nlog>
  <startup> 
     <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
  </startup>
</configuration>
